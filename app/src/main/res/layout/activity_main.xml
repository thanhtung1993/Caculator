<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="@color/colorBackground"
    tools:context=".MainActivity"
    >

    <TableRow>

        <EditText
            android:id="@+id/edtGiaTri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:hint="0"
            android:textColorHint="@color/colorText"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:maxLines="1"
            android:lines="1"
            android:phoneNumber="true"

            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn7"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:padding="20dp"
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"

            />
        <Button
            android:id="@+id/btn8"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:padding="20dp"
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_margin="3dp"
            android:padding="20dp"
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"/>
        <Button
            android:id="@+id/btnchia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_margin="3dp"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"
            android:padding="20dp"
            android:textSize="50sp"/>

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:padding="20dp"
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn5"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn6"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:textSize="50sp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btnnhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*"
            android:padding="20dp"
            android:textSize="50sp"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"
            android:layout_margin="3dp"/>

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:textSize="50sp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn2"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:textSize="50sp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn3"
            android:padding="20dp"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            />
        <Button
            android:id="@+id/btnTru"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_margin="3dp"
            android:textSize="50sp"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"/>

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnCham"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="50sp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="0"
            android:layout_margin="3dp"
            android:background="@drawable/changebackground"
            android:textColor="@color/colorText"
            android:textSize="50sp"
            />

        <Button
            android:id="@+id/btnC"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="50sp"
            android:layout_margin="3dp"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"/>
        <Button
            android:id="@+id/btnCong"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"

            android:layout_margin="3dp"
            android:textSize="50sp"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"/>

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnKetQua"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_margin="3dp"
            android:layout_span="4"
            android:textSize="50sp"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"/>

    </TableRow>




</TableLayout>
